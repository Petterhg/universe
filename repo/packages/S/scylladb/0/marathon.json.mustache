{
    "id": "{{service.name}}",
    "cpus": {{scylladb.cpus}},
    "mem": {{scylladb.mem}},
    "instances": 1,
    "env": {
        {{#scylladb.database.name}}
        "MARIADB_DATABASE": "{{scylladb.database.name}}",
        {{#scylladb.database.username}}
        "MARIADB_USER": "{{scylladb.database.username}}",
        "MARIADB_PASSWORD": "{{scylladb.database.password}}",
        {{/scylladb.database.username}}
        {{/scylladb.database.name}}
        "MARIADB_ROOT_PASSWORD": "{{scylladb.root_password}}",
        "ALLOW_EMPTY_PASSWORD": "yes"
    },
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "{{resource.assets.container.docker.scylladb-docker}}",
            "forcePullImage": true,
            {{#scylladb.bridge}}
            "network": "BRIDGE",
            "portMappings": [{
                "containerPort": 3306,
                "hostPort": 0,
                "protocol": "tcp"
            }]
            {{/scylladb.bridge}}
            {{^scylladb.bridge}}
            "network": "HOST"
            {{/scylladb.bridge}}
        },
        "volumes": [
        {
            "containerPath": "/var/lib/scylla",
            "hostPath": "{{scylladb.host_volume}}",
            "mode": "RW"
        }
        ]
    },
    {{^scylladb.bridge}}
    "portDefinitions": [
    {
            "port": 3306,
            "protocol": "tcp",
            "name": "mysql",
            "labels": {}
    }
    ],
    "requirePorts": true,
    {{/scylladb.bridge}}
    "healthChecks": [
    {
        "protocol": "TCP",
        "portIndex": 0,
        "gracePeriodSeconds": 300,
        "intervalSeconds": 60,
        "timeoutSeconds": 20,
        "maxConsecutiveFailures": 3,
        "ignoreHttp1xx": false
    }
    ],
    "labels": {
        "DCOS_SERVICE_NAME": "{{service.name}}",
        "DCOS_SERVICE_SCHEME": "http",
        "DCOS_SERVICE_PORT_INDEX": "0",
        "MARATHON_SINGLE_INSTANCE_APP":"true"
    },
    "upgradeStrategy":{
        "minimumHealthCapacity": 0,
        "maximumOverCapacity": 0
    }
}
